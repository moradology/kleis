---
import '../styles/globals.css';
import Header from '../components/Header'; // Import the new Header component
import Footer from '../components/Footer'; // Import the new Footer component

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'A modern web application built with Astro and React islands.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="shortcut icon" href="/logo.svg" type="image/svg+xml" sizes="any">
    <link rel="icon" href="/logo.svg" type="image/svg+xml" sizes="any">
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      {/* Replace the old header with the new Header component */}
      {/* Use client:load to ensure interactivity is available immediately */}
      <Header client:load />
      
      <main class="flex-1 pb-8"> {/* Removed container, mx-auto, px-0 */}
        <slot />
      </main>
      
      <Footer client:visible />
    </div>
  </body>
</html>