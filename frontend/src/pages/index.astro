---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/ui/button';
import '../components/LivePriceUpdater';
import ProductCard from '../components/ProductCard.astro'; // Import the new component
---

<Layout title="Kleis Scientific">
  <section class="py-12">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-6 text-[#002855]">Kleis Scientific</h1>
      <p class="text-xl text-[#6B7280] mb-8">
        Supplying high quality, third party tested research materials. We help researchers operate on budget, on time—every time.
      </p>
      <div class="flex justify-center gap-4">
        <Button client:visible>Products</Button>
        <Button client:visible variant="outline">Learn More</Button>
      </div>
    </div>
  </section>

  <section class="py-12 bg-secondary my-12 bg-hex-pattern">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold mb-6 text-center">Why Kleis?</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {/* Card 1: Testing */}
        <div class="bg-background p-6 rounded-lg shadow-sm text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto mb-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="#002855" stroke-width="2">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 21h14" /><path d="M6 18h2" /><path d="M7 18v3" /><path d="M9 11l3 3l6 -6l-3 -3z" /><path d="M10.5 12.5l-1.5 1.5" /><path d="M17 3l3 3" /><path d="M12 21a6 6 0 0 0 3.715 -10.712" />
          </svg>
          <h3 class="text-xl font-semibold mb-2">Lab Tested</h3>
          <p class="text-muted-foreground">Our products are tested by third party labs with gold standard analytical chemistry techniques.</p>
        </div>
        {/* Card 2: Traceability */}
        <div class="bg-background p-6 rounded-lg shadow-sm text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto mb-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="#002855" stroke-width="2">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 8v4.172a2 2 0 0 0 .586 1.414l5.71 5.71a2.41 2.41 0 0 0 3.408 0l3.592 -3.592a2.41 2.41 0 0 0 0 -3.408l-5.71 -5.71a2 2 0 0 0 -1.414 -.586h-4.172a2 2 0 0 0 -2 2z" /><path d="M18 19l1.592 -1.592a4.82 4.82 0 0 0 0 -6.816l-4.592 -4.592" /><path d="M7 10h-.01" />
          </svg>
          <h3 class="text-xl font-semibold mb-2">Batch Identified</h3>
          <p class="text-muted-foreground">Our products are tagged with a batch identification, enabling traceability and reproducibility.</p>
        </div>
        {/* Card 3: Guarantees */}
        <div class="bg-background p-6 rounded-lg shadow-sm text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto mb-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="#002855" stroke-width="2">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M11.46 20.846a12 12 0 0 1 -7.96 -14.846a12 12 0 0 0 8.5 -3a12 12 0 0 0 8.5 3a12 12 0 0 1 -.09 7.06" /><path d="M15 19l2 2l4 -4" />
          </svg>
          <h3 class="text-xl font-semibold mb-2">Quality Guaranteed</h3>
          <p class="text-muted-foreground">Anything that misses spec is refunded or replaced—fast, no forms, no excuses.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold mb-6 text-center">Product Examples</h2>

      {/* Use the ProductCard component for the first example */}
      <ProductCard
        id="123"
        name="Example Product"
        description="This is an example product with live price updates."
        price={99.99}
        stock={15}
        mg={500}
      />

      {/* Use the ProductCard component for the out-of-stock example */}
      <div class="mt-8"> {/* Keep the margin-top wrapper */}
        <ProductCard
          id="456"
          name="Out of Stock Example"
          description="This product is currently unavailable."
          price={129.99}
          stock={0}
          mg={1000}
        />
      </div>
    </div>
  </section>
</Layout>