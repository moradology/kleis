---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/ui/button';
import '../components/LivePriceUpdater';
---

<Layout title="Kleis - Modern Web Application">
  <section class="py-12">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-6">Welcome to Kleis</h1>
      <p class="text-xl text-muted-foreground mb-8">
        A modern web application built with Astro, React islands, and Tailwind CSS.
      </p>
      <div class="flex justify-center gap-4">
        <Button client:visible>Get Started</Button>
        <Button client:visible variant="outline">Learn More</Button>
      </div>
    </div>
  </section>

  <section class="py-12 bg-secondary rounded-lg my-12">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold mb-6 text-center">Key Features</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-background p-6 rounded-lg shadow">
          <h3 class="text-lg font-medium mb-2">Astro Islands</h3>
          <p class="text-muted-foreground">Selective hydration for optimal performance and interactivity.</p>
        </div>
        <div class="bg-background p-6 rounded-lg shadow">
          <h3 class="text-lg font-medium mb-2">Tailwind CSS</h3>
          <p class="text-muted-foreground">Utility-first CSS framework for rapid UI development.</p>
        </div>
        <div class="bg-background p-6 rounded-lg shadow">
          <h3 class="text-lg font-medium mb-2">TypeScript</h3>
          <p class="text-muted-foreground">Type-safe code for better development experience.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold mb-6 text-center">Product Example</h2>
      <div class="bg-background border border-border rounded-lg p-6">
        <div class="flex flex-col md:flex-row gap-6">
          <div class="w-full md:w-1/3 bg-muted rounded-md aspect-square flex items-center justify-center text-muted-foreground">
            Product Image
          </div>
          <div class="w-full md:w-2/3">
            <h3 class="text-xl font-bold mb-2">Example Product</h3>
            <p class="text-muted-foreground mb-4">This is an example product with live price updates.</p>
            <div class="flex flex-col gap-2 mb-6">
              <div class="flex items-center gap-2">
                <span class="font-medium">Price:</span>
                <span id="price-123" class="text-lg font-bold">$99.99</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="font-medium">Stock:</span>
                <span id="stock-123" class="text-green-500">In Stock (15)</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="font-medium">Size:</span>
                <span id="mg-123">500mg</span>
              </div>
            </div>
            <Button client:visible>Add to Cart</Button>
          </div>
        </div>
        {/* The live price updater component */}
        <live-price-updater data-product-id="123"></live-price-updater>
      </div>
    </div>
  </section>
</Layout>