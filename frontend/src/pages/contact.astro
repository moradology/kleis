---
import Layout from '@/layouts/Layout.astro';
import ContactForm from '@/components/ContactForm.tsx'; // Import the ContactForm component
---

<Layout
  title="Contact Us - Kleis"
  description="Get in touch with Kleis Scientific. We're here to help with your research needs."
>
  <section class="py-12 md:py-20">
    <div class="container mx-auto max-w-3xl px-6 text-center">
      <h1 class="mb-6 text-4xl font-bold text-primary sm:text-5xl md:text-6xl">Contact Us</h1>
      <p class="mb-10 text-lg text-foreground/80 sm:text-xl">
        Have a question, comment, or need support? We aim to respond to all inquiries within 24-48
        business hours.
      </p>

      {/* Replace placeholder with ContactForm component */}
      <div
        class="mx-auto max-w-xl rounded-lg border border-border bg-card p-6 text-left shadow-lg sm:p-8"
      >
        <h2 class="mb-6 text-2xl font-semibold text-primary">Send Us a Message</h2>
        <ContactForm client:load />
      </div>

      <div class="mt-12 text-center">
        <h2 class="mb-4 text-2xl font-semibold text-primary">Other Ways to Reach Us</h2>
        <p class="mb-2 text-foreground/80">
          For urgent matters, or if you prefer, you can also contact us via email:
        </p>
        <a href="mailto:support@kleis.com" class="text-lg text-accent hover:underline">
          support@kleis.com
        </a>
        <p class="mt-4 text-sm text-muted-foreground">
          (Please note: Kleis Scientific provides products for research use only.)
        </p>
      </div>
    </div>
  </section>
</Layout>
